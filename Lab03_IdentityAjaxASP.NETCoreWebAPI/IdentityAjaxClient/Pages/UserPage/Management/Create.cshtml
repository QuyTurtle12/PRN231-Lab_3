@page
@model IdentityAjaxClient.Pages.UserPage.Management.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 mb-0">Create New User</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">User Management</a></li>
                    <li class="breadcrumb-item active">Create User</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-plus me-2"></i> User Information
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Account.AccountName" class="form-label">Full Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="Account.AccountName" class="form-control" placeholder="Enter user's full name" />
                            </div>
                            <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Account.Email" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Account.Email" class="form-control" placeholder="Enter email address" />
                            </div>
                            <span asp-validation-for="Account.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Account.Password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Account.Password" class="form-control" placeholder="Enter password" />
                            </div>
                            <span asp-validation-for="Account.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Account.RoleId" class="form-label">User Role</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield"></i></span>
                                <select asp-for="Account.RoleId" class="form-select" asp-items="Model.RoleList">
                                    <option value="">-- Select Role --</option>
                                </select>
                            </div>
                            <span asp-validation-for="Account.RoleId" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create User
                            </button>
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i> User Role Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge bg-danger me-2">
                                <i class="bi bi-shield-fill"></i>
                            </span>
                            <h6 class="mb-0">Admin</h6>
                        </div>
                        <p class="small text-muted">Full access to all system features including user management</p>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge bg-info me-2">
                                <i class="bi bi-person-badge"></i>
                            </span>
                            <h6 class="mb-0">Staff</h6>
                        </div>
                        <p class="small text-muted">Access to manage products, categories, and process orders.</p>
                    </div>
                    <div>
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge bg-success me-2">
                                <i class="bi bi-person"></i>
                            </span>
                            <h6 class="mb-0">Customer</h6>
                        </div>
                        <p class="small text-muted">Standard user access for browsing products and placing orders.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}