@page "{id:int}"
@model IdentityAjaxClient.Pages.OrderPage.Management.EditModel
@{
    ViewData["Title"] = "Update Order Status";
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 mb-1">Update Order Status</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">Orders</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Details" asp-route-id="@Model.Order?.Id">Order #@Model.Order?.Id</a></li>
                    <li class="breadcrumb-item active">Update Status</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @Model.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i> Update Order #@Model.Order?.Id
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Order Info Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Customer:</strong> @Model.Order?.Account?.AccountName</p>
                            <p class="mb-1"><strong>Email:</strong> @Model.Order?.Account?.Email</p>
                            <p class="mb-1"><strong>Order Date:</strong> @Model.Order?.OrderDate?.ToString("MMMM d, yyyy")</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <p class="mb-1"><strong>Total Amount:</strong> @Model.Order?.TotalAmount?.ToString("C", new System.Globalization.CultureInfo("en-US"))</p>
                            <p class="mb-1"><strong>Items:</strong> @Model.Order?.OrderDetails?.Count</p>
                        </div>
                    </div>

                    <hr>

                    <!-- Status Update Form -->
                    <form method="post">
                        <input type="hidden" asp-for="Order.Id" />

                        <div class="mb-4">
                            <label for="OrderStatus" class="form-label">Order Status</label>
                            <select asp-for="OrderStatus" class="form-select form-select-lg" required>
                                <option value="Processing">Processing</option>
                                <option value="Shipping">Shipping</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <div class="form-text text-muted">
                                Current status: <span class="fw-bold">@Model.Order?.OrderStatus</span>
                            </div>
                            <span asp-validation-for="OrderStatus" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i> Update Status
                            </button>
                            <a asp-page="./Details" asp-route-id="@Model.Order?.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <div class="small text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Only order status can be modified. For other changes, please contact the system administrator.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 0.75rem;
            overflow: hidden;
        }

        .form-select-lg {
            height: 50px;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}