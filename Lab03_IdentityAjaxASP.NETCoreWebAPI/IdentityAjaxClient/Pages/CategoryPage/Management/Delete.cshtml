@page
@model IdentityAjaxClient.Pages.CategoryPage.Management.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index">Categories</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white py-3 border-0">
                    <h1 class="fs-4 mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Category
                    </h1>
                </div>
                <div class="card-body">
                    @if (Model.HasRelatedOrchids)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Warning:</strong> This category is used by @Model.RelatedOrchidsCount orchid@(Model.RelatedOrchidsCount != 1 ? "s" : "").
                            You need to reassign or delete these orchids before removing this category.
                        </div>
                        
                        <div class="mt-4">
                            <a asp-page="./Index" class="btn btn-primary">
                                <i class="bi bi-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    }
                    else
                    {
                        <h5>Are you sure you want to delete this category?</h5>
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            This action cannot be undone.
                        </div>
                        
                        <dl class="row mt-4">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Model.Category.CategoryName</dd>
                        </dl>
                        
                        <form method="post" class="mt-4">
                            <input type="hidden" asp-for="Category.CategoryId" />
                            <div class="d-flex justify-content-between">
                                <a asp-page="./Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>