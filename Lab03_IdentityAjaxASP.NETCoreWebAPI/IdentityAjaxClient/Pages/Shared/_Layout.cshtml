<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdentityAjaxClient</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IdentityAjaxClient.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        @{
            var isAuthenticated = Context.Session.GetString("JWTToken") != null;
            var userRole = Context.Session.GetString("UserRole")?.ToLower();
            var isCustomer = userRole == "customer";
            var isStaff = userRole == "staff";
            var isAdmin = userRole == "admin";
        }

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">IdentityAjaxClient</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Pages accessible to all users -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>

                        @if (isAuthenticated)
                        {
                            <!-- Pages for Customers, Staff -->
                            @if (isCustomer || isStaff)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/OrderPage/Management/Index">Orders</a>
                                </li>
                            }

                            <!-- Pages for Customers only -->
                            @if (isCustomer)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/CartPage/Index">Cart</a>
                                </li>
                            }

                            <!-- Pages for Staff only -->
                            @if (isStaff)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/CategoryPage/Management/Index">Category Management</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/OrchidPage/Management/Index">Orchid Management</a>
                                </li>
                            }

                            <!-- Pages for Admin only -->
                            @if (isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/UserPage/Management/Index">User Management</a>
                                </li>
                            }

                            <!-- Account dropdown for authenticated users -->
                            <li class="nav-item dropdown ms-auto">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> Account
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-page="/UserPage/Management/Details" asp-route-id="@Context.Session.GetString("UserId")">
                                        <i class="bi bi-person me-2"></i> Profile
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-page="/AuthPage/Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <!-- Authentication links for unauthenticated users -->
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" asp-area="" asp-page="/AuthPage/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/AuthPage/Register">
                                    <i class="bi bi-person-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_ToastPartial" />

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - IdentityAjaxClient - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/site-toasts.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize all toasts from the partial
            var toastElList = [].slice.call(document.querySelectorAll('.toast'));
            var toastList = toastElList.map(function (toastEl) {
                return new bootstrap.Toast(toastEl, { delay: 5000 }).show();
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>